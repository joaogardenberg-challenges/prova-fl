<% if logged_in? %>
	<% controller.redirect_to tables_path %>
<% else %>
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand" href="#" alt="Piano">
					<%= image_tag('navbar/logo.png', alt: 'Piano') %>
				</a>
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
					<i class="fa fa-bars" aria-hidden="true"></i>
				</button>
			</div>
			<div id="navbar" class="collapse navbar-collapse navbar-right">
				<ul class="nav navbar-nav">
					<li>
						<%= link_to 'Back to main page', root_path, method: :get %>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<div id="jumbotron">
		<div class="container">
			<h2>Admin Login</h2>
			<p>Log in to see the subscribes and contacts</p>
			<%= form_for :session, url: login_path do |f| %>
				<%= f.text_field :user, placeholder: 'Enter your user...' %>
				<%= f.password_field :password, placeholder: 'Enter your password...' %>
				<br/>
				<br/>
				<%= f.submit 'Log in', class: 'btn btn-default' %>
			<% end %>
			<% if flash[:success] %>
				<script>
					bootstrapAlert('<%= flash[:success].html_safe %>', 'alert-success');
				</script>
			<% end %>
			<% if flash[:danger] %>
				<script>
					bootstrapAlert('<%= flash[:danger].html_safe %>', 'alert-danger');
				</script>
			<% end %>
		</div>
	</div>
<% end %>